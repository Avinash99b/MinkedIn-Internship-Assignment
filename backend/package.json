{
  "name": "backend",
  "version": "1.0.0",
  "description": "This is the **Node.js + Express + PostgreSQL** backend for **MinkedIn**,   a Mini LinkedIn-like community platform.",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "migrate": "npm run build && node-pg-migrate up -m build/migrations",
    "migrate:down": "npm run build && node-pg-migrate down -m build/migrations",
    "migrate:create": "node-pg-migrate create -m src/migrations -j ts",
    "test": "NODE_ENV=test jest --runInBand"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "firebase-admin": "^13.4.0",
    "joi": "^17.13.3",
    "morgan": "^1.10.1",
    "node-pg-migrate": "^8.0.3",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/axios": "^0.9.36",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/joi": "^17.2.3",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.1.0",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.3",
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  }
}
